{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": false,
        "outDir": "./dist",
        "pretty": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json",
        ".env"
    ],
    "exclude": [
        "node_modules"
    ]
}